{
  "name": "codepaladin-mcp",
  "version": "1.0.1",
  "description": "VibeGen 代码侠 (CodePaladin) - MCP-2 确定性代码生成服务",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "codepaladin-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "npm run clean && tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/schemas dist/templates dist/prompts && cp -r src/schemas/* dist/schemas/ && cp -r src/templates/* dist/templates/ && cp -r src/prompts/* dist/prompts/",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "ai",
    "code-generation",
    "templates",
    "deterministic",
    "vibegen"
  ],
  "author": "VibeGen Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.4",
    "fs-extra": "^11.1.1",
    "mustache": "^4.2.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/fs-extra": "^11.0.4",
    "@types/mustache": "^4.2.2",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vibetemplate/CodePaladin.git"
  },
  "bugs": {
    "url": "https://github.com/vibetemplate/CodePaladin/issues"
  },
  "homepage": "https://github.com/vibetemplate/CodePaladin#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
